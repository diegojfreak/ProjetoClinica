@model ProjetoClinica.Models.MConsulta;

@if (ViewBag.TipoMensagem != null)
{
    if (ViewBag.TipoMensagem == "ERRO")
    {
        <div class="alert alert-danger">@ViewBag.Mensagem</div>
    }
    else if (ViewBag.TipoMensagem == "SUCESSO")
    {
        <div class="alert alert-success">@ViewBag.Mensagem</div>
    }
}

<form method="post">
    <div>
        <div class="form-group">
            <label asp-for="Paciente"></label>
            <input asp-for="Paciente" class="form-control" />
            <span asp-validation-for="Paciente" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Medico"></label>
            <input asp-for="Medico" class="form-control" />
            <span asp-validation-for="Medico" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataConsulta"></label>
            <input asp-for="DataConsulta" class="form-control" />
            <span asp-validation-for="DataConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="HoraConsulta"></label>
            <input asp-for="HoraConsulta" class="form-control" />
            <span asp-validation-for="HoraConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}